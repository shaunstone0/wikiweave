{
  "name": "@wikiweave/core",
  "version": "0.1.0",
  "description": "Vanilla JavaScript markdown editor with wiki-style linking",
  "sideEffects": false,
  "keywords": [
    "markdown",
    "editor",
    "wiki",
    "wysiwyg"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wikiweave.git",
    "directory": "packages/core"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:types": "tsc --build --watch --preserveWatchOutput",
    "dev:bundle": "tsup --watch",
    "build": "npm run build:types && npm run build:bundle",
    "build:types": "tsc --build",
    "build:bundle": "tsup",
    "clean": "tsc --build --clean && rm -rf dist",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dompurify": "^3.2.2",
    "markdown-it": "^14.1.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "tsup": "^8.3.5"
  }
}
